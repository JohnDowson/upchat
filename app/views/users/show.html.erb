<%= render partial: "/nav", locals: { text: "Dashboard for #{@user.name}" } %>

<%= render @user %>
<div>
  <%= link_to "Edit this user", edit_user_registration_path(@user) %>
</div>

<b> Your upchats: </b>
<ul class="list-group" id="chats">
  <% @user.chats.each do |chat| %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <span><%= render chat %></span>
      <span><%= link_to "Show upchat", chat %></span>
    </li>
  <% end %>
</div>


